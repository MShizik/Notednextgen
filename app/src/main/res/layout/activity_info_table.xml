<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/background"
    android:layout_height="match_parent"
    tools:context=".Activity_info_table">
    <EditText
        android:id="@+id/info_table_search_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/search_field_style"

        android:drawableLeft="@drawable/search_icon"
        android:elevation="5dp"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="?attr/colorBackgroundFloating"
        android:textColorHint="?attr/carousel_firstView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/info_table_list_info_field"
        style="@style/Widget.AppCompat.ListView.Menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="120dp"
        android:divider="#00808080"
        android:dividerHeight="10dp"
        android:filterTouchesWhenObscured="true"
        android:isScrollContainer="true"
        android:listSelector="@android:color/transparent"
        android:maxLines="4"
        android:paddingRight="10dp"
        android:textAllCaps="false"
        android:capitalize="words"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/info_table_add_info_btn"
        style="@android:style/Widget.Button"
        android:layout_width="131dp"
        android:layout_height="57dp"

        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/button_styles"
        android:focusable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="5sp"
        android:text="ADD"
        android:textAllCaps="true"
        android:textColor="?attr/textBackground"
        android:textIsSelectable="false"
        android:textSize="25dp"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_table_search_field"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/info_table_delete_info_btn"
        android:layout_width="131dp"
        android:layout_height="57dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/button_styles"
        android:focusable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="5dp"
        android:text="DELETE"
        android:textAllCaps="true"
        android:textColor="?attr/textBackground"
        android:textIsSelectable="false"
        android:textSize="25dp"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/info_table_add_info_btn" />

    <TextView
        android:id="@+id/info_table_main_fraze"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:capitalize="words"
        android:clickable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Choose an info!"
        android:textAllCaps="false"
        android:textColor="?attr/textBackground"
        android:textSize="30dp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toTopOf="@+id/info_table_search_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>