<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/background"
    android:layout_height="match_parent"
    tools:context=".Activity_people_add">
    <Button
        android:id="@+id/people_add_btn"
        style="@android:style/Widget.Button"
        android:layout_width="131dp"
        android:layout_height="57dp"

        android:layout_marginTop="80dp"
        android:background="@drawable/button_styles"
        android:focusable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="5sp"
        android:text="ADD"
        android:textAllCaps="true"
        android:textColor="?attr/textBackground"
        android:textIsSelectable="false"
        android:textSize="25dp"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/people_add_field" />

    <EditText
        android:id="@+id/people_add_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/field_style"
        android:ems="10"
        android:hint="Write person's name"
        android:inputType="textEmailAddress"
        android:maxLines="4"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="?attr/colorBackgroundFloating"
        android:textColorHint="?attr/carousel_firstView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_people_main_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:capitalize="words"
        android:clickable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="New person"
        android:textAllCaps="false"
        android:textColor="?attr/textBackground"
        android:textSize="30dp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toTopOf="@+id/people_add_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/people_add_warning_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="5dp"
        android:capitalize="words"
        android:textAllCaps="false"
        android:textColor="@color/nice_red"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/people_add_field"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>