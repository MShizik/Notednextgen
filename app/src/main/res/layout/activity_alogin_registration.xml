<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background">

    <Button
        android:id="@+id/registration_sugnup_btn"
        style="@android:style/Widget.Button"
        android:layout_width="131dp"
        android:layout_height="57dp"

        android:layout_marginTop="90dp"
        android:background="@drawable/signup_button"
        android:focusable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="5sp"
        android:text="Sign up"
        android:textAllCaps="true"
        android:textColor="?attr/textBackground"
        android:textIsSelectable="false"
        android:textSize="25dp"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/registration_login_btn"
        app:layout_constraintTop_toBottomOf="@+id/registration_fio_field" />

    <Button
        android:id="@+id/registration_login_btn"

        style="@android:style/Widget.Button"
        android:layout_width="131dp"
        android:layout_height="57dp"

        android:layout_marginTop="90dp"
        android:background="@drawable/button_styles"
        android:focusable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="5sp"
        android:text="Log in"
        android:textAllCaps="true"
        android:textColor="?attr/textBackground"
        android:textIsSelectable="false"
        android:textSize="25dp"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="add"
        app:layout_constraintEnd_toStartOf="@+id/registration_sugnup_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_fio_field" />

    <EditText
        android:id="@+id/registration_fio_field"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/field_style"
        android:ems="10"

        android:hint="Write name"
        android:inputType="textPersonName"
        android:maxLines="4"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="?attr/colorBackgroundFloating"
        android:textColorHint="?attr/carousel_firstView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_password_field" />

    <EditText
        android:id="@+id/registration_password_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/field_style"
        android:ems="10"
        android:hint="Write password"
        android:inputType="textPassword"
        android:maxLines="4"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"

        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="?attr/colorBackgroundFloating"
        android:textColorHint="?attr/carousel_firstView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_email_field" />

    <EditText
        android:id="@+id/registration_email_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/field_style"
        android:ems="10"
        android:hint="Write email"
        android:inputType="textEmailAddress"
        android:maxLines="4"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"

        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="?attr/colorBackgroundFloating"
        android:textColorHint="?attr/carousel_firstView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/registration_email_warning_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:capitalize="words"
        android:textAllCaps="false"
        android:textColor="@color/nice_red"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/registration_email_field"
        app:layout_constraintStart_toStartOf="@+id/registration_email_field" />

    <TextView
        android:id="@+id/registration_fio_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:capitalize="words"
        android:textAllCaps="false"
        android:textColor="@color/nice_red"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/registration_fio_field"
        app:layout_constraintStart_toStartOf="@+id/registration_fio_field" />

    <TextView
        android:id="@+id/registration_password_warning_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:capitalize="words"
        android:textAllCaps="false"
        android:textColor="@color/nice_red"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/registration_password_field"
        app:layout_constraintStart_toStartOf="@+id/registration_password_field" />

    <TextView
        android:id="@+id/registration_main_info_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="90dp"
        android:capitalize="words"
        android:clickable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Hello!"
        android:textAllCaps="false"
        android:textColor="?attr/textBackground"
        android:textSize="30dp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toTopOf="@+id/registration_email_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>