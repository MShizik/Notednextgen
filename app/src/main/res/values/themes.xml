<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Noted" parent="Theme.AppCompat.Light.NoActionBar">
        <item name = "android:background">@color/white_background</item>
    </style>

    <style name = "CustomTextView">
        <item name = "android:textColor">@color/text_light_theme_color</item>
        <item name = "android:textSize">32sp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:fontFamily">@font/comic_neue_light</item>
    </style>

    <style name = "CustomTextViewError" parent = "CustomTextView">
        <item name = "android:textColor">@color/nice_red</item>
    </style>

    <style name = "CustomTextViewHint" parent = "CustomTextView">
        <item name = "android:textSize">20sp</item>
    </style>

    <style name = "CustomTextViewTinyHint" parent = "CustomTextViewHint">
        <item name = "android:textSize">18sp</item>
        <item name = "android:textColor">@color/hint_light_theme_color</item>
    </style>

    <style name = "CustomEditText">
        <item name = "android:background">@drawable/input_background_light</item>
        <item name = "android:paddingTop">5dp</item>
        <item name = "android:paddingBottom">5dp</item>
        <item name = "android:paddingLeft">10dp</item>
        <item name = "android:paddingRight">5dp</item>
        <item name = "android:textColor">@color/text_dark_theme_color</item>
        <item name = "android:textSize">24sp</item>
        <item name = "android:gravity">center_vertical|left</item>
    </style>

    <style name = "CustomTextButton" parent = "Widget.MaterialComponents.Button.TextButton">
        <item name = "android:textColor">@color/text_light_theme_color</item>
        <item name = "android:textSize">32sp</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:fontFamily">@font/comic_neue_light</item>
    </style>

    <style name="CustomBorderedButton" parent = "Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_light</item>
        <item name = "android:padding">10dp</item>
        <item name = "android:textColor">@color/text_light_theme_color</item>
        <item name = "android:textSize">32sp</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:fontFamily">@font/comic_neue_light</item>
    </style>

    <style name = "CustomListViewRow">
        <item name = "android:background">@drawable/list_row_background_light</item>
    </style>

    <style name = "CustomImageButton">
        <item name = "android:src">@drawable/icon_back_light</item>
        <item name = "android:background">@color/transparent</item>
    </style>

    <style name = "ImageEditButton">
        <item name ="android:src">@drawable/icon_edit_light</item>
    </style>

    <style name = "ImageDeleteButton">
        <item name = "android:src">@drawable/icon_delete_light</item>
    </style>


    <style name="customProgressBarStyle">
        <item name = "android:background">@color/transparent</item>
    </style>

</resources>